<% include layouts/top %>
<% if (typeof error === 'undefined') { %>
  <h1>Login</h1>
  <form action=".">
    <input type="email" placeholder="Benutzername" autofocus>
    <input type="password" placeholder="Passwort">
    <input type="submit">
    <input type="hidden" name="_csrf" value="<%= csrf %>">
  </form>
  <h1>Registrieren</h1>
  <form action=".">
    <input type="email" placeholder="Benutzername">
    <input type="password" placeholder="Passwort">
    <input type="password" placeholder="Passwort wiederholen">
    <input type="submit">
    <input type="hidden" name="_csrf" value="<%= csrf %>">
  </form>
<% } %>
<% include layouts/bottom %>